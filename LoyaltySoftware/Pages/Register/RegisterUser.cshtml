@page
@model LoyaltySoftware.Pages.Register.RegisterUserModel
@{
}


<h1> Register To Create An Account</h1>


<div>
    <div class="col-md-4">
        <form method="post">
            <br />
            <p><b>Enter Your Personal Details</b></p>

            <div class="form-group">
             <label>First Name</label>
             <input asp-for="UserDBORecord.first_name" class="form-control" />
            </div>
            <div class="form-group">
             <label>Last Name</label>
             <input asp-for="UserDBORecord.last_name" class="form-control" />
            </div>
            <div class="form-group">
             <label>Date Of Birth (DD/MM/YYYY)</label>
             <input asp-for="UserDBORecord.dob" class="form-control" />
            </div>
            <div class="form-group">
             <label>Phone Number</label>
             <input asp-for="UserDBORecord.telephone" class="form-control" />
            </div>
            <div class="form-group">
             <label>Email Address</label>
             <input asp-for="UserDBORecord.email" class="form-control" />
            </div>
            <div>
             <p style="color: red">@Model.Message1</p>
            </div>

            <br />
            <p><b>Choose A Username and Password</b></p>
            <div class="form-group">
             <label>Username</label>
             <input asp-for="UserAccountRecord.username" class="form-control" />
             <p style="color: red">@Model.Message2</p>
            </div>
            <div class="form-group">
             <label>Password</label>
             <!--Modified code-->
             <p>To ensure a strong secure password, your passsword requires the following:</p>
                <ol type="1">
                    <li>A minimum length of 8 characters. </li>
                    <li>At least one uppercase character.</li>
                    <li>At least one lowercase character.</li>
                    <li>At least one digit character.</li>
                    <li>At least one special character (such as ‘£’ or ‘%’ etc.).</li>
                 </ol>

             <input asp-for="UserAccountRecord.password" class="form-control" />
             <p style="color: red">@Model.Message3</p>
            </div>

            <br />
            <div>
                <input type="submit" value="Create Account" class="btn btn-primary" />
            </div>

        </form>
        </div>
    </div>
